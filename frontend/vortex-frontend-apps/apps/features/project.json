{
  "name": "features",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/features/src",
  "prefix": "vortex-apps",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:webpack-browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/features",
        "index": "apps/features/src/index.html",
        "main": "apps/features/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/features/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": ["apps/features/src/favicon.ico", "apps/features/src/assets"],
        "styles": ["apps/features/src/styles.scss"],
        "scripts": [],
        "customWebpackConfig": {
          "path": "apps/features/webpack.config.js"
        },
        "commonChunk": false
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all",
          "customWebpackConfig": {
            "path": "apps/features/webpack.prod.config.js"
          },
          "fileReplacements": [ 
            {
              "replace": "libs/features-lib/src/environments/environment.ts",
              "with": "environments/environment.prod.ts"
            }
          ]
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@nrwl/angular:webpack-dev-server",
      "configurations": {
        "production": {
          "browserTarget": "features:build:production"
        },
        "development": {
          "browserTarget": "features:build:development"
        }
      },
      "defaultConfiguration": "development",
      "options": {
        "port": 4202,
        "publicHost": "http://localhost:4202"
      }
    },
    "extract-i18n": {
      "executor": "ngx-build-plus:extract-i18n",
      "options": {
        "browserTarget": "roles:build",
        "extraWebpackConfig": "apps/roles/webpack.config.js"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/features/**/*.ts", "apps/features/**/*.html"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/features/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
