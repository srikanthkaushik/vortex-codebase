# Stage 0, "build-stage", based on Node.js, to build and compile the frontend
FROM node:17-alpine3.12 as build-stage
WORKDIR /build
COPY . .
RUN npm install
COPY ./ /build/
ARG configuration=production
RUN npm run build -- --project=features --output-path=./dist/features --configuration $configuration --baseHref=/dev/features/
FROM nginx:stable
COPY --from=build-stage /build/dist/features /usr/share/nginx/html/features/
COPY ./nginx-roles-custom.conf /etc/nginx/conf.d/default.conf
# support running as arbitrary user which belogs to the root group
RUN chmod g+rwx /var/cache/nginx /var/run /var/log/nginx
# users are not allowed to listen on priviliged ports
RUN sed -i.bak 's/listen\(.*\)80;/listen 8081;/' /etc/nginx/conf.d/default.conf
EXPOSE 8081
# comment user directive as master process is run as user in OpenShift anyhow
RUN sed -i.bak 's/^user/#user/' /etc/nginx/nginx.conf
